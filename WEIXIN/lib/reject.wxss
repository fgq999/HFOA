.modal-mask {
	position: fixed;
	top: 0;
	left: 0;
	overflow: hidden;
	z-index: 90;
	width: 100%;
	height: 100%;
	background: #000;
	opacity: 0.3;
}

.modal-dialog {
	position: fixed;
	top: 400rpx;
	left: 120rpx;
	width: 500rpx;
	height: 400rpx;
	z-index: 99;
	background: #ffffff;
	border-radius: 20rpx;
	box-shadow: #2A98BD 4rpx 4rpx 20rpx 6rpx, #2A98BD -4rpx -4rpx 20rpx 6rpx;
}

.weui-cells__title{
	margin-top: 22rpx;
	height: 50rpx;
	line-height: 50rpx;
	font-size: 36rpx;
	color: #000;
}

.modal-content {
	padding-top: 10rpx;
	padding-left: 20rpx;
	width: 100%;
	height: 360rpx;
	overflow: hidden;
	font-size: 32rpx;
	border-bottom: #B2B2B2;
}

.modal-footer {
	margin-top: 30rpx;
	width: 100%;
	padding: 0 40rpx;
}

.btn-confirm {
	margin: 0;
	padding: 0;
	margin-left: 50rpx;
	display: inline-block;
	width: 180rpx;
	height: 90rpx;
	text-align: center;
}

.btn-cancel {
	margin: 0;
	padding: 0;
	display: inline-block;
	width: 180rpx;
	height: 90rpx;
	text-align: center;
}

.modify-textarea{
	height: 140rpx;
	font-size: 32rpx;
	color: #37383B;
}