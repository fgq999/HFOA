.bgr {
  position: relative;
  width: 750rpx;
}

.operate {
  position: fixed;
  top: 0;
  z-index: 3;
  height: 80rpx;
  width: 750rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #EAEAEA;
  background: #fff;
}

.operate_item {
  width: 50%;
  height: 75rpx;
  display: inline-block;
  text-align: center;
}

.operate_item.active {
  color: #2A98BD;
  border-bottom: 4rpx #2A98BD solid;
  transition: all 0.2s linear 0s;
}

