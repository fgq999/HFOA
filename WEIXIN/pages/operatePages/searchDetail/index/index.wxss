/* pages/mainPages/menu/menu.wxss */

page {
  position: relative;
  top: 0;
  left: 0;
  width:100%;
  height:100%;
  min-width: 750rpx;
  max-width: 750rpx;
  z-index:-10;
}

.menu_icon {
  height: 360rpx;
  width: 750rpx;
}

.informs {
  position: relative;
  margin-top: 6rpx;
  width: 750rpx;
  height: 70rpx;
  font-size: 28rpx;
  line-height: 70rpx;
  border-top: 1rpx solid #D9D9D9;
  background-color: #ffffff;
}

.inform_icon {
  margin: 0 10rpx 12rpx 20rpx;
  width: 44rpx;
  height: 40rpx;
}

.inform_title {
  display: inline-block;
  width: 10%;
  color: #2A98BD;
  overflow: hidden;
}

.inform_body {
  display: inline-block;
  width: 65%;
  overflow: hidden;
}

.inform_more {
  position: absolute;
  top: 2rpx;
  right: 4rpx;
  display: inline-block;
  width: 100rpx;
  color: #2A98BD;
}

.more {
  display: inline-block;
}

.arrow_right {
  width: 16rpx;
  height: 16rpx;
  margin-right: 10rpx;
  display: inline-block;
  color: #999999;
}

.menu_view {
  /* margin-top: 20rpx; */
  background-color: #ffffff;
}