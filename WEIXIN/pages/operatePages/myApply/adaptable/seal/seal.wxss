/* pages/modulePages/seal/sealApply/sealApply.wxss */

page {
  background-color: #F1EFF6;
  max-width: 750rpx;
}

.first_radio {
  margin-right: 60rpx;
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: 90;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.3;
}

.modal-dialog {
  position: absolute;
  top: 200rpx;
  left: 126rpx;
  width: 480rpx;
  height: 600rpx;
  z-index: 99;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: #2A98BD 4rpx 4rpx 20rpx 6rpx, #2A98BD -4rpx -4rpx 20rpx 6rpx;
}

.modal-content {
  margin-top: 36rpx;
  width: 480rpx;
  height: 420rpx;
  overflow: auto;
}

.checkbox {
  margin-left: 36rpx;
  margin-bottom: 4rpx;
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.checked_label {
  display: inline-block;
  text-align: center;
}

.modal-footer {
  width: 100%;
  padding: 0 40rpx;
  height: 150rpx;
  line-height: 150rpx;
}

.btn-cancel {
  margin-top: 26rpx;
  margin-right: 40rpx;
  padding: 0;
  display: inline-block;
  width: 180rpx;
  height: 90rpx;
  text-align: center;
}

.btn-confirm {
  margin-top: 26rpx;
  padding: 0;
  display: inline-block;
  width: 180rpx;
  height: 90rpx;
  text-align: center;
}

/* 发往单位自动匹配 */
.company_mask{
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: 90;
  width: 100%;
  height: 100%;
  background: transparent;
}

.scrollview {
  position: absolute;
  top: 90rpx;
  left: 0;
  margin-left: 224rpx;
  width: 516rpx;
  height: 350rpx;
  z-index: 99;
  overflow: auto;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: #2A98BD 2rpx 2rpx 10rpx 3rpx, #2A98BD -2rpx -2rpx 10rpx 3rpx;
}

.itemview {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: pre-wrap;
  padding: 20rpx 20rpx 20rpx 20rpx;
  border-bottom: 1rpx solid #D9D9D9;
}