.btn{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.list{
  padding-bottom: 50rpx;
}

.item {
  position: relative;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background: #FFFFFF;
  border-bottom: 1rpx solid #E6E6E6;
}

.clearfix:after {
  content: "";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

.user_icon {
  float: left;
  margin-right: 25rpx;
  margin-left: 30rpx;
  width: 80rpx;
  height: 80rpx;
}

.detail_info {
  float: left;
  width: 420rpx;
  color: #888888;
  font-size: 32rpx;
}

.applyMan{
  width: 140rpx;
  display: inline-block;
  font-size: 36rpx;
  color: #37383B;
}

.status{
  width: 200rpx;
  display: inline-block;
  font-size: 36rpx;
  color: #f5a623;
}

.destination {
  float: left;
  position: absolute;
  top: 50rpx;
  right: 10rpx;
  width: 214rpx;
  font-size: 28rpx;
  color: #000000;
  text-align: center;
}

.color_blue {
  float: left;
  position: absolute;
  top: 96rpx;
  right: 10rpx;
  width: 214rpx;
  font-size: 32rpx;
  color: #2A98BD;
  text-align: center;
}