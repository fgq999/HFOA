page {
  max-width: 750rpx;
}

.border_top_bottom {
  width: 750rpx;
  height: 140rpx;
  border-top: 1rpx solid #EAEAEA;
  border-bottom: 1rpx solid #EAEAEA;
  background: #FFFFFF;
}

.public_icon {
  display: inline-block;
  width: 190rpx;
  height: 120rpx;
  margin: 10rpx;
}

.public_info {
  display: inline-block;
  position: absolute;
  top: 44rpx;
  left: 300rpx;
  color: #000000;
  font-size: 20px;
}

/* .weui-loadmore__tips {
